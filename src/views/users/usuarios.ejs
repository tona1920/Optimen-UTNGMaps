<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>UTNG MAPS</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
        integrity="sha512-9usAa10IRO0HhonpyAIVpjrylPvoDwiPUiKdWk5t3PyolY1cOd4DSE0Ga+ri4AuTroPR5aQvXU9xC6qOPnzFeg=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
    
</head>
<body>
    <% if (!user.admin) { %>
        <%- include('../404') %>
    <% } else { %>
    <header>
        <%- include('../layouts/_header') %>
    </header>
    <main>
        <div class="container">
            <div class="row">
                <div class="col">
                    
                        <div>
                            <h1>Lista de Usuarios</h1>
                            <br>
                            <table class="table" action="/user" method="GET">
                                <thead class="thead-dark">
                                  <tr>
                                    <th scope="col">ID</th>
                                    <th scope="col">Username</th>
                                    <th scope="col">Email</th>
                                    <th scope="col">Status</th>
                                    <th scope="col">Action</th>
                                  </tr>
                                </thead>
                                <tbody>
                                    <% for(var i = 0; i < users.length; i++) { %>
    
                                        <tr>
                                            <td><%= i + 1 %></td>
                                            <td><%= users[i].name %></td>
                                            <td><%= users[i].email %></td>
                                            <% if (!users[i].admin) { %> 
                                                <td>User</td>  
                                            <% } else { %>
                                                <td>Admin</td>
                                            <% } %>      
                                            <td>
                                                <a type="button" class="btn btn-outline-success" href="/edit/<%= users[i]._id %>"><i class="fa-solid fa-pen-to-square"></i></i></a>
                                                <a type="button" class="btn btn-outline-danger" href="/delete/<%= users[i]._id %>"><i class="fa-solid fa-trash"></i></i></a>
                                            </td>
    
                                        </tr>
                                        
                                        
                                        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                            <div class="modal-dialog">
                                              <div class="modal-content">
                                                <div class="modal-header">
                                                  <h5 class="modal-title" >Eliminar Usuario</h5>
                                                  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                </div>
                                                <div class="modal-body">
                                                    <label>Desea eliminar al usuario  : </label><input type="text" name="nombre" id="nombre" value="" disabled/><br>
                                                </div>
                                                <div class="modal-footer">
                                                  <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                                  <button type="button"  class="btn btn-primary">Save changes</button>
                                                </div>
                                              </div>
                                            </div>
                                          </div>


                                        <% } %>
                                </tbody>
                            </table>
                            <a type="button" class="btn btn-outline-info" href="/users/new-user"> 
                                <i class="fa-solid fa-circle-plus"></i>
                                Crear Usuario
                            </a>
                    
                </div>
    
            </div>
        </div>
    </main>
    <% } %>
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>
</body>

</html>